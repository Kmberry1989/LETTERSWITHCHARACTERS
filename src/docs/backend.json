{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture."
        },
        "email": {
          "type": "string",
          "description": "The user's email address."
        }
      },
      "required": ["displayName", "email"]
    },
    "Tile": {
      "title": "Tile",
      "description": "Represents a single game tile.",
      "type": "object",
      "properties": {
        "letter": { "type": "string" },
        "score": { "type": "number" },
        "isBlank": { "type": "boolean", "description": "Whether the tile was originally a blank." }
      },
      "required": ["letter", "score"]
    },
    "Game": {
      "title": "Game",
      "description": "Represents a single game session.",
      "type": "object",
      "properties": {
        "players": {
          "type": "array",
          "items": { "type": "string" },
          "description": "An array of user UIDs participating in the game."
        },
        "playerData": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "displayName": { "type": "string" },
              "score": { "type": "number" },
              "avatarId": { "type": "string" },
              "tiles": {
                "type": "array",
                "items": { "$ref": "#/entities/Tile" }
              },
              "hintUsed": { "type": "boolean" }
            }
          }
        },
        "board": {
            "type": "object",
            "description": "The state of the game board. Keys are 'row-col', values are Tile objects.",
            "additionalProperties": {
                "$ref": "#/entities/Tile"
            }
        },
        "tileBag": {
            "type": "array",
            "items": { "$ref": "#/entities/Tile" },
            "description": "The remaining tiles in the game."
        },
        "currentTurn": {
          "type": "string",
          "description": "The UID of the player whose turn it is."
        },
        "status": {
          "type": "string",
          "enum": ["active", "pending", "finished"],
          "description": "The current status of the game."
        },
        "consecutivePasses": {
          "type": "number",
          "description": "The number of consecutive passes made by players."
        },
        "winner": {
            "type": "string",
            "description": "The UID of the winning player."
        }
      },
      "required": ["players", "playerData", "board", "tileBag", "currentTurn", "status"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/games/{gameId}": {
      "schema": {
        "$ref": "#/entities/Game"
      },
      "description": "Stores all the data for a single game session."
    }
  }
}
