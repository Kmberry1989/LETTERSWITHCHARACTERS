/**
 * @fileoverview Firestore Security Rules for Letters with Characters application.
 *
 * Core Philosophy:
 * This ruleset prioritizes a secure, user-centric data model. It enforces strict
 * ownership for user-specific data and uses a shared access model for collaborative
 * game data. Public read access is granted for certain collections, while
 * writes are always carefully controlled.
 *
 * Data Structure:
 * - /users/{userId}: Stores private user profile data. Only the authenticated user
 *   can read or write their own profile.
 * - /avatars/{avatarId}: Stores user avatars.  For simplicity, assume it's private to the user that created it.
 * - /themes/{themeId}: Stores game themes. Publicly readable, but only admins can
 *   create, update, or delete themes.
 * - /games/{gameId}: Stores game instances. Access is controlled via a "members"
 *   map on the document, where each key is a user ID and the value is their role
 *   in the game (e.g., 'player').
 * - /leaderboard/{leaderboardEntryId}: Stores leaderboard entries. Publicly readable.
 * - /stickers/{stickerId}: Stores sticker information. Publicly readable.
 * - /minigame_scores/{minigameScoreId}: Stores minigame scores. Publicly readable.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) User with matching ID can create their profile.
     * @allow (get, list, update, delete) User with matching ID can access their profile.
     * @deny (create) User cannot create a profile with a mismatched ID.
     * @deny (get, list, update, delete) User cannot access another user's profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to user avatars.
     * @path /avatars/{avatarId}
     * @allow (create) User with matching ID can create their avatar.
     * @allow (get, list, update, delete) User with matching ID can access their avatar.
     * @deny (create) User cannot create an avatar with a mismatched ID.
     * @deny (get, list, update, delete) User cannot access another user's avatar.
     * @principle Enforces document ownership for all operations.
     */
    match /avatars/{avatarId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to game themes.
     * @path /themes/{themeId}
     * @allow (get, list) Anyone can read themes.
     * @deny (create, update, delete) Only admins can modify themes (TODO: Implement admin check).
     * @principle Allows public read access, restricts write access.
     */
    match /themes/{themeId} {
      allow get, list: if true;
      allow create: if false; // TODO: Implement admin check
      allow update: if false; // TODO: Implement admin check
      allow delete: if false; // TODO: Implement admin check
    }

    /**
     * @description Controls access to game instances.
     * @path /games/{gameId}
     * @allow (get) Any player in the game can read the game state.
     * @allow (list) A user can list games they are a player in.
     * @allow (create) An authenticated user can create a game they are a player in.
     * @allow (update) A player can update a game if it is their turn and the move is valid.
     * @deny (delete) No one can delete a game.
     */
    match /games/{gameId} {
      function isPlayer() {
        return request.auth.uid in resource.data.players;
      }
      function isCurrentTurn(uid) {
        return resource.data.currentTurn == uid;
      }
      function isNextTurn(uid) {
        return request.resource.data.currentTurn == uid;
      }
      function unchanged(field) {
        return request.resource.data[field] == resource.data[field];
      }
       function getOpponentUid(uid) {
        // This function is illustrative. A robust implementation would handle more than 2 players.
        return resource.data.players[0] == uid ? resource.data.players[1] : resource.data.players[0];
      }

      function isValidMove() {
        let uid = request.auth.uid;
        let opponentUid = getOpponentUid(uid);
        let playerData = request.resource.data.playerData[uid];
        let oldPlayerData = resource.data.playerData[uid];
        let opponentPlayerData = request.resource.data.playerData[opponentUid];
        let oldOpponentPlayerData = resource.data.playerData[opponentUid];

        return isCurrentTurn(uid) &&
               isNextTurn(opponentUid) &&
               playerData.score > oldPlayerData.score && // score must increase
               playerData.tiles.size() <= 7 && // player has correct number of tiles
               opponentPlayerData.score == oldOpponentPlayerData.score && // opponent score unchanged
               unchanged('players'); // players cannot change mid-game
      }
      
      function isValidPass() {
        let uid = request.auth.uid;
        let opponentUid = getOpponentUid(uid);
         return isCurrentTurn(uid) &&
               isNextTurn(opponentUid) &&
               unchanged('board') &&
               unchanged('playerData') &&
               (request.resource.data.consecutivePasses == resource.data.consecutivePasses + 1 || request.resource.data.status == 'finished');
      }

      function isValidExchange() {
         let uid = request.auth.uid;
         let opponentUid = getOpponentUid(uid);
         let playerData = request.resource.data.playerData[uid];

         return isCurrentTurn(uid) &&
                isNextTurn(opponentUid) &&
                unchanged('board') &&
                playerData.tiles.size() == 7;
      }
      
      function isValidChatMessage() {
        return request.resource.data.messages.size() == resource.data.messages.size() + 1 &&
               request.resource.data.messages[-1].senderId == request.auth.uid &&
               unchanged('board') && unchanged('playerData') && unchanged('currentTurn');
      }

      allow get: if isPlayer();
      allow list: if isSignedIn() && request.query.where[2][2] == request.auth.uid;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.players;
      allow update: if isSignedIn() && isPlayer() && (isValidMove() || isValidPass() || isValidExchange() || isValidChatMessage());
      allow delete: if false;
    }
    
     /**
     * @description Controls access to the public lobby chat.
     * @path /lobbyMessages/{messageId}
     * @allow (read) Any signed-in user can read messages.
     * @allow (create) Any signed-in user can create a message.
     * @deny (update, delete) No one can update or delete messages.
     * @principle Allows public chat for authenticated users.
     */
    match /lobbyMessages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    /**
     * @description Controls access to leaderboard entries.
     * @path /leaderboard/{leaderboardEntryId}
     * @allow (get, list) Anyone can read leaderboard entries.
     * @deny (create, update, delete) Only authorized services can modify leaderboard entries (TODO: Implement service account check).
     * @principle Allows public read access, restricts write access to authorized services.
     */
    match /leaderboard/{leaderboardEntryId} {
      allow get, list: if true;
      allow create: if false; // TODO: Implement service account check
      allow update: if false; // TODO: Implement service account check
      allow delete: if false; // TODO: Implement service account check
    }

    /**
     * @description Controls access to sticker information.
     * @path /stickers/{stickerId}
     * @allow (get, list) Anyone can read sticker information.
     * @deny (create, update, delete) Only admins can modify sticker information (TODO: Implement admin check).
     * @principle Allows public read access, restricts write access.
     */
    match /stickers/{stickerId} {
      allow get, list: if true;
      allow create: if false; // TODO: Implement admin check
      allow update: if false; // TODO: Implement admin check
      allow delete: if false; // TODO: Implement admin check
    }

     /**
      * @description Controls access to minigame scores.
      * @path /minigame_scores/{minigameScoreId}
      * @allow (get, list) Anyone can read minigame scores.
      * @deny (create, update, delete) Only authorized services can create minigame scores (TODO: Implement authorized service account check).
      * @principle Allows public read access, restricts write access to authorized services.
      */
    match /minigame_scores/{minigameScoreId} {
        allow get, list: if true;
        allow create: if isSignedIn(); // TODO: Implement authorized service account check
        update: if false; // TODO: Implement authorized service account check
        delete: if false; // TODO: Implement authorized service account check
    }
  }
}
